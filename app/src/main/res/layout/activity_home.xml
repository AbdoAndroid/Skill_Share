<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">
                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/swich_near"
                    android:text="@string/near_only"
                    android:textSize="20sp"
                    android:theme="@style/SwitchTheme"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#77f" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginBottom="5dp"
            android:id="@+id/lv_posts"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu"
        android:backgroundTint="#3487FF"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="644dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logout"
        android:backgroundTint="#3487FF"
        android:clickable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/btn_menu"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="644dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_profile"
        android:backgroundTint="#3487FF"
        android:clickable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/btn_logout"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="644dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:backgroundTint="#3487FF"
        android:clickable="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/btn_profile"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="25dp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="644dp" />

</androidx.constraintlayout.widget.ConstraintLayout>